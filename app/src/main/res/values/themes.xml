<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestBLE" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Settings_type_title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#CDFFB0</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Settings_item_title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Settings_item_subtitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#b7b7b7</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Settings_item_button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Settings_detail_description" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Settings_bladeheight_seekbar" parent="@android:style/Widget.SeekBar">
<!--        <item name="android:indeterminateOnly">false</item>-->
<!--        <item name="android:progressDrawable">@drawable/layer_seekbar</item>-->
<!--        <item name="android:indeterminateDrawable">@android:drawable/progress_horizontal</item>-->
        <item name="android:minHeight">80dp</item>
        <item name="android:maxHeight">80dp</item>
    </style>
    <style name="Checkbox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">#D3D3D3</item>   <!-- normal border color change as you wish -->
<!--        <item name="colorControlActivated">#000</item> &lt;!&ndash; activated color change as you wish &ndash;&gt;-->
<!--        <item name="android:textColor">#FFFF3F3C</item> &lt;!&ndash; checkbox text color &ndash;&gt;-->
    </style>
</resources>