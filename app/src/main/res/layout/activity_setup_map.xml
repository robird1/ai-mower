<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_map_landscape">

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:background="#99000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="123dp"
        android:background="#99000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <io.github.controlwear.virtual.joystick.android.JoystickView
        android:id="@+id/joystick"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:JV_backgroundColor="#000"
        app:JV_borderColor="#000"
        app:JV_borderWidth="4dp"
        app:JV_buttonColor="#999"
        app:JV_buttonSizeRatio="35%"
        app:JV_enabled="true"
        app:JV_fixedCenter="false"
        app:layout_constraintBottom_toBottomOf="@id/mapView"
        app:layout_constraintStart_toStartOf="@id/mapView" />

    <com.ulsee.mower.ui.map.MapView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#6A3030"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/titleHintText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FFFFFFFF"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footerViewStep1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/chargeStationView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_setmap_start" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:text="SET"
            android:textColor="#FFFFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footerViewStep2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/startWorkingBoundaryView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_setmap_mowing"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:text="START"
            android:textColor="#FFFFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footerViewStep3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="visible">

        <TextView
            android:id="@+id/step3SwitchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="switch mode"
            android:textColor="#FFFFFFFF"
            app:layout_constraintBaseline_toBaselineOf="@+id/step3SetPointText"
            app:layout_constraintEnd_toEndOf="@+id/step3SwitchButton"
            app:layout_constraintStart_toStartOf="@+id/step3SwitchButton" />

        <ImageView
            android:id="@+id/step3SwitchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/step3SetPointButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.62"
            app:srcCompat="@drawable/ic_setmap_start" />

        <TextView
            android:id="@+id/step3SetPointText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Point"
            android:textColor="#FFFFFFFF"
            android:visibility="gone"
            app:layout_constraintBaseline_toBaselineOf="@+id/step3EndText"
            app:layout_constraintEnd_toEndOf="@+id/step3SetPointButton"
            app:layout_constraintStart_toStartOf="@+id/step3SetPointButton" />

        <ImageView
            android:id="@+id/step3SetPointButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="22dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/step3EndButton"
            app:layout_constraintEnd_toStartOf="@+id/step3SwitchButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/step3EndButton"
            app:srcCompat="@drawable/ic_setmap_point" />

        <ImageView
            android:id="@+id/step3EndButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/step3EndText"
            app:layout_constraintEnd_toStartOf="@+id/step3SetPointButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_setmap_done" />

        <TextView
            android:id="@+id/step3EndText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:text="END"
            android:textColor="#FFFFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/step3EndButton"
            app:layout_constraintStart_toStartOf="@+id/step3EndButton" />

        <TextView
            android:id="@+id/step3Instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Long pree “Set point” button switch to the driving mode."
            android:textColor="#FFFFFFFF"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/step3EndButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footerViewStep4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textColor="#FFFFFFFF"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView11"
            app:layout_constraintEnd_toEndOf="@+id/step4DoneButton"
            app:layout_constraintStart_toStartOf="@+id/step4DoneButton" />

        <ImageView
            android:id="@+id/step4DoneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            app:layout_constraintBottom_toBottomOf="@+id/step4ObstacleButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/step4ObstacleButton"
            app:srcCompat="@drawable/ic_setmap_done" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Obstacle"
            android:textColor="#FFFFFFFF"
            app:layout_constraintBaseline_toBaselineOf="@+id/step4NextLawnText"
            app:layout_constraintEnd_toEndOf="@+id/step4ObstacleButton"
            app:layout_constraintStart_toStartOf="@+id/step4ObstacleButton" />

        <ImageView
            android:id="@+id/step4ObstacleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            app:layout_constraintBottom_toBottomOf="@+id/step4NextLawnButton"
            app:layout_constraintEnd_toStartOf="@+id/step4DoneButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/step4NextLawnButton"
            app:srcCompat="@drawable/ic_setmap_obstacle" />

        <TextView
            android:id="@+id/step4NextLawnText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next lawn"
            android:textColor="#FFFFFFFF"
            app:layout_constraintBaseline_toBaselineOf="@+id/step4EditText"
            app:layout_constraintEnd_toEndOf="@+id/step4NextLawnButton"
            app:layout_constraintStart_toStartOf="@+id/step4NextLawnButton" />

        <ImageView
            android:id="@+id/step4NextLawnButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"

            app:layout_constraintBottom_toBottomOf="@+id/step4EditButton"
            app:layout_constraintEnd_toStartOf="@+id/step4ObstacleButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/step4EditButton"
            app:srcCompat="@drawable/ic_setmap_mowing" />

        <ImageView
            android:id="@+id/step4EditButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="4dp"

            app:layout_constraintBottom_toTopOf="@+id/step4EditText"
            app:layout_constraintEnd_toStartOf="@+id/step4NextLawnButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_setmap_edit" />

        <TextView
            android:id="@+id/step4EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:text="Edit map"
            android:textColor="#FFFFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/step4EditButton"
            app:layout_constraintStart_toStartOf="@+id/step4EditButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footerViewSetObstacle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/obstacleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Obstacle"
            android:textColor="#FFFFFFFF"
            app:layout_constraintBaseline_toBaselineOf="@+id/obstacleEndText"
            app:layout_constraintEnd_toEndOf="@+id/obstacleButton"
            app:layout_constraintStart_toStartOf="@+id/obstacleButton" />

        <ImageView
            android:id="@+id/obstacleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            app:layout_constraintBottom_toBottomOf="@+id/obstacleEndButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/obstacleEndButton"
            app:srcCompat="@drawable/ic_setmap_obstacle" />

        <ImageView
            android:id="@+id/obstacleEndButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/obstacleEndText"
            app:layout_constraintEnd_toStartOf="@+id/obstacleButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_setmap_done" />

        <TextView
            android:id="@+id/obstacleEndText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:text="END"
            android:textColor="#FFFFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/obstacleEndButton"
            app:layout_constraintStart_toStartOf="@+id/obstacleEndButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>